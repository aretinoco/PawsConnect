<!DOCTYPE html>
    <html lang="en">
        <%- include ("partials/head.ejs")%>
  <body>
    <div class ="form-container">
    <h1>Account Details</h1>
    <form action="updateAccount" method="POST">
        <!-- <label for="username">Enter Username:</label> -->
        <input type="text" id="username" name="username" placeholder = "Enter Username">
        <br>
        <!-- <label for="location">New Location:</label> -->
        <input type="text" id="location" name="location" placeholder = "Enter New Location">
        <br>
        <!-- <label for="language">New Language:</label> -->
        <input type="text" id="language" name="language" placeholder = "Enter New Language">
        <br>
        <!-- <label for="displayname">New Display Name:</label> -->
        <input type="text" id="displayname" name="displayname" placeholder = "Enter New Display Name">
        <br>
        <label for="picture">New Profile Picture:</label>
        <input type="file" id="picture" name="picture" >
        <br>
        <button type="submit">Update Account</button>
    </form>
    </div>
  </body>
</html>